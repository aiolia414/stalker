#!/usr/bin/env python

import sys
import optparse
from stalker.stalker_utils import readconf
from stalker.stalker_manager import SMDaemon, StalkerManager

def run_server():
    """stat/stop/restart server"""
    usage = '''
    %prog start|stop|restart [--conf=/path/to/some.conf] [--foreground|-f]
    '''
    args = optparse.OptionParser(usage)
    args.add_option('--foreground', '-f', action="store_true",
                    help="Run in foreground")
    args.add_option('--conf', default="/etc/stalker/stalker-manager.conf",
                    help="path to config. default = /etc/stalker/stalker-manager.conf")
    args.add_option('--pid', default="/var/run/stalker-manager.pid",
                    help="default = /var/run/stalker-manager.pid")
    options, arguments = args.parse_args()

    if len(arguments) != 1:
        args.print_help()
        sys.exit(1)

    pid_file = options.pid

    if options.foreground:
        conf = readconf(options.conf)
        sm = StalkerManager(conf['main'])
        sm.sanitize()
        sm.start()
        sys.exit(0)

    if len(sys.argv) >= 1:
        conf = readconf(options.conf)
        daemon = SMDaemon(pid_file)
        if 'start' == arguments[0]:
            daemon.start(conf['main'])
        elif 'stop' == arguments[0]:
            daemon.stop()
        elif 'restart' == arguments[0]:
            daemon.restart(conf['main'])
        else:
            args.print_help()
            sys.exit(2)
        sys.exit(0)
    else:
        args.print_help()
        sys.exit(2)

if __name__ == '__main__':
    run_server()
